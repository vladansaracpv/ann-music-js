{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "target": "es6",
      "resolveJsonModule": true,
      "allowJs": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "baseUrl": ".",
      "lib": [
        "dom",
        "es6"
      ],
      "outDir": "build"
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts"
  ],
  "include": [
      "./src/**/*.ts"
  ],
  "paths": {
    "*": [
        "node_modules/*"
    ]
  }
}
