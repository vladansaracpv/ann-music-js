{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["dom", "es6", "es2015", "es2016", "es2017"],
    "outDir": "dist"
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src/**/**/*.ts", "src/typings.d.ts"],
  "paths": {
    "*": ["node_modules/@types/*", "*"]
  }
}
